<% include partials/head %>

  <body>
    <div class="col-sm-8 col-sm-offset-2">
      <div class="jumbotron text-center">
        <h1><span class="fa fa-sign-in"></span> Reset Password</h1>

        <% if (message != null) { %>
        	<div class="alert-danger"><%= message %></div>
        <% } %>

        <form method="post" onsubmit="return submitEvent()">
          <div class="form-group">
              <label>Please enter new password.</label>
              <input type="password" class="form-control" name="password" id="password">
          </div>
          <div class="form-group">
              <label>Please retype new password.</label>
              <input type="text" class="form-control" name="re-password" id="re-password">
          </div>
          <div>
            <input type="submit" class="form-control" value="Submit" />
          </div>
        </form>
      </div>
      <hr>
      <span class="fa fa-sign-in"> Go to <a href="/login">Login</a></span>
      <p>Or go <a href="/">home</a>.</p>
    </div>
    <script>
      function submitEvent(){
        var password = document.getElementById('password').value;
        var confirm_password = document.getElementById('re-password').value;
        if(!password || !confirm_password || password !== confirm_password){
          return false;
        }
      }
    </script>
  </body>
</html>